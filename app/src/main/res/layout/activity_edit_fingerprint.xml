<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellownewbg"
    tools:context=".controller.RegisterActivity2">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:id="@+id/imageUser"

            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="48dp"
                android:layout_weight="1"
                android:fontFamily="@font/kanit_light"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">
        <TextView
            android:id="@+id/finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/kanit_light"
            android:text="finger"
            android:textColor="@color/black"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="233dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstImage"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shape_rectangle" />

            <ImageView
                android:id="@+id/secondImage"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_weight="2"

                app:srcCompat="@drawable/shape_rectangle" />

            <ImageView
                android:id="@+id/thridImage"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"

                app:srcCompat="@drawable/shape_rectangle" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/kanit_light"
            android:text="กรุณากดเพื่อแก้ไขลายนิ้วมือ"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/scanbtn"
            android:layout_width="168dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_power__red" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>