<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellownewbg"
    tools:context=".controller.RegisterActivity2">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kanit_light"
            android:text="นิ้วชี้้ข้างขวา"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/firstImage"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/shape_rectangle" />

            <ImageView
                android:layout_weight="2"
                android:id="@+id/secondImage"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"

                app:srcCompat="@drawable/shape_rectangle" />

            <ImageView
                android:layout_weight="3"
                android:id="@+id/thridImage"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"

                app:srcCompat="@drawable/shape_rectangle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/kanit_light"
            android:text="นิ้วโป้งข้างขวา"
            android:textColor="@color/black"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="264dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pongFirst"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shape_rectangle"
                tools:layout_editor_absoluteX="290dp"
                tools:layout_editor_absoluteY="319dp" />

            <ImageView
                android:id="@+id/pongSecond"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_weight="2"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                app:srcCompat="@drawable/shape_rectangle"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="308dp" />

            <ImageView
                android:id="@+id/pongThird"
                android:layout_width="114dp"
                android:layout_height="138dp"
                android:layout_weight="3"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/shape_rectangle"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="319dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">
        <TextView
            android:layout_weight="1"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit_light"
            android:text="กรุณากดเพื่อลงทะเบียน"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.697" />
        <ImageView
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:id="@+id/scanbtn"
            android:layout_width="168dp"
            android:layout_gravity="center"
            android:layout_height="141dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.897"
            app:srcCompat="@drawable/ic_power__red" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>